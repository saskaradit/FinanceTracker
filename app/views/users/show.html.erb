<h2>User Detail</h2>

<div class="results-block">
  <%= render 'layouts/messages'%>
</div>

<div class="card card-header results-block">
    <table class="col-md-12">
    <tbody>
        <tr>
            <td><Strong>Email:  </Strong><%= @user.email%></td>
            <td><Strong>Full Name:  </Strong><%= @user.full_name%></td>
            <td> <% if current_user.not_friends?(@user.id)%>
                <%= link_to 'Follow Friend', friendship_path(friend: @user), class:"btn btn-success", method: :post%>
            <% else %>
                <span class="badge badge-secondary">You are friends</span>
            <% end %>
            </td>
        </tr>
    </tbody>
    </table>
</div>

<% if !@tracked_stocks.empty? %> <%= render 'stocks/stocklist'%>
<% else %>
    <p class="lead">This user is not tracking any stocks</p>
<% end %>